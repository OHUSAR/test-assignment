{
  "compilerOptions": {
    "preserveConstEnums": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./.vscode", "./dist", "./migrations"],
  "ts-node": {
    "files": true,
  }
}
